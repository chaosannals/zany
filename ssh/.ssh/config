# 客户端保持连接
ServerAliveInterval 50
ServerAliveCountMax 3

 # 如果不能识别，那么 Host 和 HostName 必须一样。
 # 自建 GitLab 出现过需要一样的情况。
Host gitlab(user)
    HostName youserver.com
    User root

Host github(publickey)
    HostName github.com
    User git
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/github

Host reaspberrypi
    HostName 192.168.0.15
    User pi
